{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ES2018"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "outDir": "src",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["src.ts/**/*"],
  "exclude": ["node_modules", "src"]
}
